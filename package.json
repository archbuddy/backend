{
  "name": "archbuddy-backend",
  "version": "1.0.0",
  "description": "Backend to handle all application interaction, authentication and so on",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/index.js",
    "test": "standard --fix && jest  --coverage ./tests/* --detectOpenHandles",
    "test:custom": "standard --fix && jest ./tests/service/viewPoint.test.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "prepare": "husky install",
    "seed": "node src/repository/seed.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/archbuddy/backend.git"
  },
  "author": "https://github.com/archbuddy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/archbuddy/backend/issues"
  },
  "homepage": "https://archbuddy.github.io/documentation",
  "dependencies": {
    "@fastify/cors": "^7.0.0",
    "@fastify/helmet": "8.0.1",
    "convict": "^6.2.3",
    "fastify": "^3.29.0",
    "fastify-plugin": "^3.0.0",
    "fastify-swagger": "5.2.0",
    "fiql-parser": "^0.1.2",
    "fs-extra": "^10.1.0",
    "http-errors": "2.0.0",
    "mongoose": "^6.3.3",
    "uuidv4": "^6.2.13",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.2",
    "dotenv": "^16.0.1",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "mongodb-memory-server": "^8.5.2",
    "nodemon": "^2.0.16",
    "standard": "^17.0.0"
  },
  "standard": {
    "globals": [
      "beforeAll",
      "afterAll",
      "beforeEach",
      "afterEach",
      "setTimeout",
      "describe",
      "it",
      "test",
      "expect",
      "jest",
      "fit"
    ]
  }
