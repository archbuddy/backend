{
  "name": "archbuddy-backend",
  "version": "1.0.0",
  "description": "Backend to handle all application interaction, authentication and so on",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/webapp/server.js",
    "test": "standard --fix && jest  --coverage ./tests/* --detectOpenHandles",
    "test:husky": "jest  --coverage ./tests/* --detectOpenHandles",
    "test:custom": "standard --fix && jest ./tests/services/relation.test.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "prepare": "husky install",
    "seed": "node src/services/repository/seed.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/archbuddy/backend.git"
  },
  "author": "https://github.com/archbuddy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/archbuddy/backend/issues"
  },
  "homepage": "https://archbuddy.github.io/documentation",
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "@fastify/helmet": "9.1.0",
    "@fastify/jwt": "^6.2.1",
    "@fastify/static": "^6.4.0",
    "@fastify/swagger": "^7.3.0",
    "axios": "^0.27.2",
    "convict": "^6.2.3",
    "fastify": "^4.0.3",
    "fastify-plugin": "^4.0.0",
    "fiql-parser": "^0.1.2",
    "fs-extra": "^10.1.0",
    "http-errors": "2.0.0",
    "mongoose": "^6.4.4",
    "uuid": "^8.3.2",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^3.0.1",
    "dotenv": "^16.0.1",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "mongodb-memory-server": "^8.6.0",
    "nodemon": "^2.0.19",
    "standard": "^17.0.0"
  },
  "standard": {
    "globals": [
      "beforeAll",
      "afterAll",
      "beforeEach",
      "afterEach",
      "setTimeout",
      "describe",
      "it",
      "test",
      "expect",
      "jest",
      "fit"
    ]
  },
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": ">=16.0.0 <17.0.0"
  }
}
